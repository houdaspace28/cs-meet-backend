generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  bio       String?
  profilePic String?
  projects  Project[]
  blogs     Blog[]
}

model Project {
  id        String   @id @default(uuid())
  title     String
  field     String
  stack     String[]
  belongsTo User     @relation(fields: [userId], references: [id])
  userId    String
  picture   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Blog {
  id        String   @id @default(uuid())
  title     String
  type      String
  description String
  content   String
  picture   String
  createdAt DateTime @default(now())
  belongsTo User     @relation(fields: [userId], references: [id])
  userId    String
}

model Pathway { 
    id        String   @id @default(uuid())
    title     String
    description String
    duration  String
    createdAt DateTime @default(now())
    steps     Step[]
}

model Step {
    id        String   @id @default(uuid())
    title     String
    description String
    createdAt DateTime @default(now())
    order     Int
    duration  String
    visualLinks String[]
    readingLinks String[]
    belongsTo Pathway @relation(fields: [pathwayId], references: [id])
    pathwayId String
}


